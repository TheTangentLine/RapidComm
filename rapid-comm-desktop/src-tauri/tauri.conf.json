{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "rapid-comm-desktop",
  "version": "0.1.0",
  "identifier": "com.rapidcomm.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "RapidComm Control Panel",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ],
    "externalBin": [
      "../../build/bin/rapidcomm-server"
    ],
    "resources": [
      "../../src/interface"
    ]
  }
}
